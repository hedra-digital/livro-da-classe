<div class="row">
  <div class="span3">
    <h1>Colaboradores</h1>
  </div>

  <div class="span3 offset6">
    <%= link_to 'Incluir novo', new_book_collaborator_path(@book.uuid), :class => 'btn btn-primary', :style => 'margin-top: 30px;' %>
  </div>
</div>

<% if @collaborators.present? %>
  <h3>Colaboradores</h3>

  <table class="table">
    <tr>
      <th>Email</th>
    </tr>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.email rescue 'N/A' %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if @invited_users.present? %>
  <h3>Convites enviados</h3>

  <table class="table">
    <tr>
      <th>Email</th>
      <th></th>
    </tr>
    <% @invited_users.each do |invited_user| %>
      <tr>
        <td><%= invited_user.email rescue 'N/A' %></td>
        <td><%= link_to 'Reenviar convite', resend_invitation_book_collaborator_path(@book.uuid, invited_user.password_reset_token) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
