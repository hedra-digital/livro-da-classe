<%= link_to 'Incluir novo', new_book_collaborator_path(@book.uuid), :class => 'btn btn-primary', :style => 'float: right;' %>

<h1>Colaboradores</h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Status</th>
    <th></th>
  </tr>

<% @collaborators.each do |collaborator| %>
  <tr>
    <td><%= collaborator.email rescue 'N/A' %></td>
    <% if collaborator.password_digest %>
      <td>Ativado</td>
      <td></td>
    <% else %>
      <td>NÃ£o ativado</td>
      <td><%= link_to 'Reenviar convite', resend_invitation_book_collaborator_path(@book.uuid, collaborator.password_reset_token) %></td>
    <% end %>
  </tr>
<% end %>
</table>
