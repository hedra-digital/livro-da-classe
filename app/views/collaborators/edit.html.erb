<section id="new_session">
  <div class="new_session cadastro-login">

    <h1><%=t :get_started %></h1>

    <%= simple_form_for([@book, @collaborator], :url => book_collaborator_path(@book.uuid, @collaborator.password_reset_token), :method => :put) do |f| %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit %>
    <% end %>

  </div>
</section>

<script>
$.each($("form div"), function() {
  var label = $("label",$(this)).text();
  $("label",$(this)).hide();
  $("div input",$(this)).prop("placeholder",label);
});
</script>
