<h1 style="margin: 0 0 40px 0;">Lista de projetos</h1>

<table class="table table-striped">
  <tr>
    <th>TÃ­tulo</th>
    <th>Email</th>
    <th>Telefone</th>
    <!--<th>Template</th>-->
    <th>Status</th>
    <th></th>
    <th>Documento</th>
    <th></th>
  </tr>
  <% if @projects %>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.book.title, admin_project_path(project) %>, (<%= project.book.organizer.name.presence || project.book.organizer.email %>, org.)</td>
        <td><%= project.book.organizer.email %></td>
        <td><%= project.book.organizer.telephone %></td>
        <!--<td><%= project.book.template %></td>-->
        <td><%= project.status_to_s %></td>
        <td><%= admin_book_status(project.book) %></td>
        <td>
        <% if project.book.document.present? %>
        <%= link_to "Download", project.book.document.url %>
        <% else %>
        <%= t('document_none') %>
        <% end %>
        </td>
        <td><%= link_to 'Editar', edit_admin_project_path(project), :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  <% end %>
</table>

