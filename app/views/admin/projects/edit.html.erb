<h1>Editar projeto</h1>

<%= simple_form_for(@project, :url => { :action => :update }) do |f| %>
  <div class="form-inputs">
    <%= f.input :status, :collection => @statuses, :include_blank => false %>
    <%= f.simple_fields_for :book do |b| %>
      <%= b.input :template, :collection => Livrodaclasse::Application.latex_templates, :include_blank => false %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
