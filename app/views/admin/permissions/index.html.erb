<h1>Permissões</h1>

<% if @permissions.present? %>
  <table class="table table-striped">
    <tr>
      <th>Perfil</th>
      <th>Status</th>
      <th>Leitura</th>
      <th>Escrita</th>
      <th>Execução</th>
      <th>Revisão</th>
      <th>Git</th>
      <th>Contratar</th>
    </tr>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.profile.desc %></td>
        <td><%= permission.book_status.desc %></td>
        <td><%= active_or_not(permission.read) %></td>
        <td><%= active_or_not(permission.write) %></td>
        <td><%= active_or_not(permission.execute) %></td>
        <td><%= active_or_not(permission.review) %></td>
        <td><%= active_or_not(permission.git) %></td>
        <td><%= active_or_not(permission.print) %></td>
      </tr>
    <% end %>
  </table>
  <div class="btn-group">
    <%= link_to 'Editar Permissões', edit_admin_permission_path(@permissions.first), :class => 'btn btn-primary btn-new btn-small' %>
  </div>
<% else %>
  <p class="blank">Nenhuma permissão definida.</p>
<% end %>
