<h1>Recados</h1>

<% if @scraps.present? %>
  <table class="table table-striped">
    <tr>
      <th></th>
      <th></th>
      <th>Data</th>
      <th>Livro</th>
      <th>Conversa</th>
      <th></th>
    </tr>
    <% @scraps.each do |scrap| %>
      <tr>
        <td><span class="badge"><%= scrap.answered? ? '' : '!' %></span></td>
        <td><%= "##{scrap.id}" %></td>
        <td><span class="label label-info"><%= scrap.created_at.strftime("%d/%m/%Y") %></span></td>
        <td><%= link_to scrap.book.title, book_path(scrap.book.uuid) %></td>
        <td><%= "#{scrap.content[0..20]}..." %></td>
        <td><%= link_to 'Expandir', admin_scraps_thread_path(scrap), :class => 'btn btn-mini' %></td>
      </tr>
    <% end %>
  </table>
  <div class="btn-group">
    <%= link_to 'Novo Recado', new_admin_scrap_path, :class => 'btn btn-primary btn-new btn-small' %>
  </div>
<% else %>
  <p class="blank">Nenhum recado cadastrada. <%= link_to 'Definir um novo recado?', new_admin_scrap_path %></p>
<% end %>
