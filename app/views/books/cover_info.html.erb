<h2>Capa</h2>
<%= simple_form_for(@cover_info, :url => "update_cover_info", :html => { :multipart => true }) do |f| %>
  <%= f.input :titulo_linha1 %>
  <%= f.input :titulo_linha2 %>
  <%= f.input :titulo_linha3 %>
  <%= f.input :autor %>
  
