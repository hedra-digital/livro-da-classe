<p id="notice"><%= notice %></p>

<h2>Title</h2>
<p><%= @book.title %></p>

<h2>Has Texts</h2>
<p><%= raw @book.texts.map {|x| x.to_label}.join ', ' %></p>

<h2>Full Text</h2>
<% @book.texts.each do |text| %>
<ul>
	<li><strong><%= text.title  %></strong></li>
	<li><%= text.content  %></li>
</ul>
<% end %>

<p><%= link_to "Print", book_path(:format => :pdf) %> | <%= link_to 'Edit', edit_book_path(@book) %> </p>

<% if session['admin_logged'] %>
<p>	<%= link_to 'Return to admin area', admin_path %> </p>
<% end %>