<%= url_alunos %>

<%= render "navigation" %>

<% if @book.finished_at.present? %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    Livro finalizado em <strong><%=  @book.finished_at.strftime("%d/%m/%y") %></strong>
  </div>
<% end %>

<%= flash_message %>

<br>

<% @book.texts.each do |text| %>
<div class="text-item well">
  <dl>
    <dt class="text-title">Título</dt>
    <dd><%= text.title %></dd>
    <dt class="text-author">Autor</dt>
    <dd><%= person_name_for(text) %></dd>
    <dt class="text-words">Palavras</dt>
    <dd><%= words_per_text(text.content) %></dd>
    <dt class="text-status">Status</dt>
    <dd><%= text_status_for(text) %></dd>
  </dl>
  <%= link_to("Ver texto", book_text_path(@book.uuid, text.uuid), :class => "text-url btn btn-primary")  %>
</div>
<% end %>

<% if @book.finished_at.nil? %>
  <hr/>
  <div id="book_finished"><%= link_to "Marcar o livro como terminado", finish_book_path(@book.uuid), :class => "btn btn-danger" %></div>
<% end %>