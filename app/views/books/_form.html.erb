<%= simple_form_for(@book, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <h3> <%= "Livro" unless @book.new_record? %> </h3>
    <%= f.input :title, :label => "Título do livro (máx. 54 toques)", :input_html => {:maxlength => 54 } %>
    <div class="row">
      <div class="span"><%= "Documento atual: #{@book.document_file_name}" if @book.document.present? %></div>
    </div>
    <br>
    <div class="row">
      <div class="span"><%= f.input :document, :as => :file, :label => @book.document.present? ? "Alterar o documento" : "Carregar o documento" %></div>
    </div>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= raw("ou ") + link_to("Cancelar", @book, :style => "color: red;" ) unless @book.new_record?%>
  </div>
<% end %>
