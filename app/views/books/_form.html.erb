<%= simple_form_for(@book, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :organizers, :as => :text %>
    <%= f.input :directors, :as => :text %>
    <%= f.input :coordinators, :as => :text %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= raw("ou ") + link_to("Cancelar", @book, :style => "color: red;" ) unless @book.new_record?%>
  </div>
<% end %>
