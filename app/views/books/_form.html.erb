<%= simple_form_for(@book, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
        <h3> <%= "Livro" unless @book.new_record? %> </h3>
        <%= f.input :title, :label => "Título do livro (máx. 54 toques)", :input_html => {:maxlength => 54 } %>
        <%= f.input :document, :as => :file, :label => "Documento" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= raw("ou ") + link_to("Cancelar", @book, :style => "color: red;" ) unless @book.new_record?%>
  </div>
<% end %>
