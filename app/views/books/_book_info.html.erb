<div id="book-info">
  <div class="container">
    <div class="row">
      <div class="span1">
        <img src="http://placehold.it/60x80">
      </div>
      <div class="span8">
        <h2 class="book-title"><%= @book.title %></h2>
        <nav role="navigation">
          <ul class="nav nav-pills">
            <%= menu_item t(:overview, :scope => :book_nav), book_path(@book.uuid) %>
            <% if is_organizer? %>
              <%= menu_item t(:book_data, :scope => :book_nav), edit_book_path(@book.uuid) %>
            <% end %>
            <%= menu_item t(:texts, :scope => :book_nav), book_texts_path(@book.uuid) %>
            <% if is_organizer? %>
              <%= menu_item t(:collaborators, :scope => :book_nav), book_collaborators_path(@book.uuid) %>
            <% end %>
            <%= menu_item t(:pdf, :scope => :book_nav), book_path(@book.uuid, :format => "pdf")  %>
            <% if is_organizer? && is_project? %>
              <%= menu_item t(:project, :scope => :book_nav), edit_book_project_path(@book.uuid, @book.project.id) %>
            <% end %>
          </ul>
        </nav>
      </div>
      <div class="span3 book-info-aux">
        <% if current_page?(new_book_project_path(@book)) %>
        <% elsif @book.project.nil? %>
          <%= link_to 'Publicar', new_book_project_path(@book.uuid), :class => 'btn btn-new' %>
        <% else %>
          <%= remaining_label(@book.project) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
