<b id="team">Equipe</b>
<%= f.input :institution, :input_html => {:maxlength => 100 } %>
<b id="address">Endereço</b>
<div class="row">
  <div class="address-row">
  	<div class="address-itens"><%= f.input :street %></div>
  	<div class="address-itens"><%= f.input :number, :required => false %></div>
  	<div class="address-itens"><%= f.input :city %></div>
  </div>
</div>
<div class="row">
  <div class="span"><%= f.input :state, collection: @states %></div>
  <div class="span2"><%= f.input :zipcode %></div>
</div>
<div class="row">
  <div class="span4"><%= f.input :directors, :as => :string %></div>
  <%- if !@book.organizers.nil? %>
    <div class="span4"><%= f.input :organizers, :label => "Professor responsável", :as => :string %></div>
  <%- else %>
    <div class="span4"><%= f.input :organizers, :label => "Professor responsável", :as => :string, :input_html => { :value => current_user.name }  %></div>
  <%- end %>
  <div class="span4"><%= f.input :klass %></div>
</div>
