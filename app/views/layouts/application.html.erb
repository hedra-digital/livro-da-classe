    <div class="wrap wrap-app">
      <header class="main-header main-header-app" data-spy="affix">
				<div class="inner-wrap">

					<div class="logo" >
						<%= image_tag "scielo/logo-scielo.png" %>
					</div>

					<nav class="navigation">
						<ul>
							<li class="active"><%= link_to t('my_books'), '/apphome' %></li>
							<% if current_user.publisher? %>
								<li><%= link_to 'EDITORIAL', '/admin' %></li>
							<% end %>
							<li>
								<a data-toggle="dropdown" href="#">Conta <i class="icon-arrow"></i></a>
								<ul class="dropdown">
									<li><%= link_to current_user.name, user_path(current_user) %></li>
									<li><%= link_to t(:sign_out), signout_path, :method => :delete %></li>
								</ul>
							</li>
						</ul>
					</nav>
				</div>
			</header>

      <%= flash_message %>

      <main>
        <div class="inner-wrap">
          <% if (controller_name == 'books' and params[:id]) || params[:book_id] %>
          <%= render 'books/book_info'  %>
            <div class="container">
              <%= yield %>
            </div>
          <% else %>
              <%= yield %>
          <% end %>
        </div>
      </main>

      <footer class="main-footer">
        <div class="inner-wrap">
          <div class="footer-bottom">
            <div class="address">
							SciELO - Scientific Electronic Library Online<br />
							Av. Onze de Junho, 269 - Vila Clementino 04041-050 São Paulo SP - Brasil<br />
							Tel.: (55 11) 5083-3639 - Email: scielo@scielo.org
						</div>
            <div class="copyright">Copyright © 2016, Hedra. <%= version_number%></div>
          </div>
        </div>
      </footer>
    </div>

