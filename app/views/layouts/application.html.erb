<!DOCTYPE html>
<html>
	<head>
		<!-- Meta -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, minimum-scale=1.0, user-scalable=yes">
		<meta name="theme-color" content="#0068AE">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

		<!-- CSS -->
		<link rel="shortcut icon" sizes="32x32" href="/images/app-icon-32.png">
		<link rel="manifest" href="/manifest.json">
		<link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700' rel='stylesheet' type='text/css'>

		<%= yield(:head) %>
		<%= yield(:title).presence || content_tag(:title, "#{Publisher.get_current_app}") %>
		<%= stylesheet_link_tag    "public", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= favicon_link_tag %>
		<%= csrf_meta_tags %>
		<%= yield :meta_tags %>

	</head>
	<body class="application <%= @body_class %>">
			

		<!-- All -->
		<div class="wrap wrap-app">


			<!-- Header -->
			<header class="main-header main-header-app">
				<div class="inner-wrap">
					
					
					<!-- Logo -->
					<div class="logo" >
						<%= image_tag "scielo/logo-scielo.png" %>
					</div>
					

					<!-- Navigation -->
					<nav class="navigation">
						<ul>
							<li class="active"><%= link_to t('my_books'), books_path %></li>
							
							<% if current_user.publisher? %>
								<li><%= link_to 'EDITORIAL', '/admin' %></li>
							<% end %>
							
							<!-- <li><a class="tutorial-modal" data-fancybox-type="iframe" href="http://prezi.com/embed/w2ipyvduj-gc/?bgcolor=ffffff&amp;lock_to_path=0&amp;autoplay=0&amp;autohide_ctrls=0&amp;features=undefined&amp;disabled_features=undefined">Tutorial</a></li> -->

							<li>
								<a data-toggle="dropdown" href="#">Conta <i class="icon-arrow"></i></a>
								<ul class="dropdown">
									<li><%= link_to current_user.name, user_path(current_user) %></li>
									<li><%= link_to t(:sign_out), signout_path, :method => :delete %></li>
								</ul>
							</li>
						</ul>
					</nav>


				</div>
			</header>



			<!-- space -->
			<div class="header-space"></div>



			<!-- Notification -->
			
			<% #if :flash_message? %>
				<% #= flash_message %>
				<script>
					// <%= flash_message.html_safe %>
					// common.showOutput(true, '<%= flash_message.html_safe %>')
				</script>
			<% #end %>



			<!-- Content -->
			<main>
				<div class="inner-wrap">
					<%= yield %>
				</div>
			</main>



			<!-- Footer -->
			<footer class="main-footer">
				<div class="inner-wrap">
					<div class="footer-top">
						<ul class="nav">
							<li></li>
						</ul>
					</div>
					<div class="footer-bottom">
						<div class="address">
							<strong>SciELO - Scientific Electronic Library Online</strong>
							<br />
							Av. Onze de Junho, 269 - Vila Clementino 04041-050 SÃ£o Paulo SP - Brasil
							<br />
							Tel.: (55 11) 5083-3639 - Email: scielo@scielo.org
						</div>
					</div>
				</div>
			</footer>
		</div>



		<!-- Google Analytics -->
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-34822510-2']);
