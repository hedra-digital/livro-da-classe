    <div id="wrap">
      <header>
        <div class="container">
          <div class="row">
            <div class="span5">
              <h1><%= link_to_unless_current 'Livro da Classe', root_path %></h1>
            </div>
            <div id="userid" class="span3 offset4">
              <%= link_to "Entrar no site", signin_path %>
              <%= link_to "Cadastrar-se", new_user_path %>
            </div>
          </div>
        </div>
      </header>
      <div id="main" role="main" class="container">
        <%= flash_message %>
        <%= yield %>
      </div>
      <div id="push"></div>
    </div>
    <footer>
      <div class="container">
        <div id="logo">
          <%= image_tag 'logo-hedra.png', :width => '130', :height => '130' %>
        </div>
        <div id="address">
          <h2>Hedra Educação Ltda.</h2>
          <address>
            Rua Fradique Coutinho 1139 Subsolo<br>
            Vila Madalena<br>
            São Paulo - SP<br>
            Tel. (11) 3097-8304<br>
          </address>
        </div>
      </div>
    </footer>

