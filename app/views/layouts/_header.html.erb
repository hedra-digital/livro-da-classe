<%= content_tag :div, :id => 'header' do %>

	<%= content_tag :div, :id => 'navigation' do %>
		logado como <strong><%= logged_in_as %></strong> 
		<% if session['student_logged'] && @text.present? && @text.id.present? && @text.finished_at.nil?%>
			&middot;<%= link_to 'finalizar texto', finish_book_text_path(@book.uuid, @text.uuid) %>
		<% end %>		
		<% if session['professor_logged'] && @book.present? && @book.finished_at.nil?%>
			&middot;<%= link_to 'finalizar livro', finish_book_path(@book.uuid) %>
		<% end %>
		<%= link_to 'sair', logout_path, :class => 'logout' %>
	<% end %>
	<% if session['admin_logged'] %>
		<%= content_tag :h1, 'Livro da Classe' %>
		<%= content_tag :h2, 'Administrador' %>
	<% end %>
	<% if session['professor_logged'] && @book.present? %>
		<%= content_tag :h1, @book.school.name rescue "No School"%>
		<%= content_tag :h2, @book.title, :class => 'livro-titulo' %>
	<% end %>

<% end %>