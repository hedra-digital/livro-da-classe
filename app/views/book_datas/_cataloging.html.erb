<div class="cataloging-container">
  <h3 id="cataloging" class="collapse-click collapse-head">Ficha Catalogr√°fica</h3>
  <div class="fields">
    <div class="row">
      <div class="span4">
        <label for="book_datas_imagemficha"><%= t('book_data.imagemficha') %></label>
        <div class="fileupload <%= @book.book_data.imagemficha.present? ? 'fileupload-exists' : 'fileupload-new' %>" data-provides="fileupload">
          <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=sem+imagem" /></div>
          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
            <%= image_tag(@book.book_data.imagemficha.url(:small)) if @book.book_data.imagemficha.present? %>
          </div>
          <div>
            <span class="btn btn-file"><span class="fileupload-new">Selecionar imagem</span><span class="fileupload-exists">Alterar</span>
              <%= f.input_field :imagemficha, :as => :file %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>