<div class="cover-container">
  <%= f.input :orelha, :label => t('book_data.orelha'), input_html: {cols: '100', rows: '5'} %>
  <%= f.input :quartacapa, :label => t('book_data.quartacapa'), input_html: {cols: '100', rows: '5'} %>

  <%= f.simple_fields_for :cover_info do |c| %>
    <div class="fileupload <%= @book.cover_info.capa_imagem.present? ? 'fileupload-exists' : 'fileupload-new' %>" data-provides="fileupload">
      <label for="cover_info_capa_imagem"><%= t('book_data.capaimagem') %></label>
      <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
        <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=sem+imagem" />
      </div>
      <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
        <%= image_tag(@book.cover_info.capa_imagem.url(:small)) if @book.cover_info.capa_imagem.present? %>
      </div>
      <% if @book.cover_info.capa_imagem.present? %>
        <div class="fileupload-exists checkbox">
          <%= check_box_tag(:remove_capa) %>
          <%= label_tag(:remove_capa, "Remover imagem.") %>
        </div>
      <% else %>
        <div>
          <a href="#" class="btn btn-file fileupload-exists" data-dismiss="fileupload">Remover</a>
        </div>
      <% end %>
      <div>
        <span class="btn btn-file"><span class="fileupload-new">Selecionar imagem</span><span class="fileupload-exists">Alterar</span>
          <%= c.input_field :capa_imagem, :as => :file %>
        </span>
      </div>
    </div>
    <div class="fileupload <%= @book.cover_info.capa_detalhe.present? ? 'fileupload-exists' : 'fileupload-new' %>" data-provides="fileupload">
      <label for="cover_info_capa_detalhe"><%= t('book_data.capadetalhe') %></label>
      <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=sem+imagem" /></div>
      <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
        <%= image_tag(@book.cover_info.capa_detalhe.url(:small)) if @book.cover_info.capa_detalhe.present? %>
      </div>
      <% if @book.cover_info.capa_detalhe.present? %>
        <div class="fileupload-exists checkbox">
          <%= check_box_tag(:remove_capa_detalhe) %>
          <%= label_tag(:remove_capa_detalhe, "Remover imagem.") %>
        </div>
      <% else %>
        <div>
          <a href="#" class="btn btn-file fileupload-exists" data-dismiss="fileupload">Remover</a>
        </div>
      <% end %>
      <div>
        <span class="btn btn-file"><span class="fileupload-new">Selecionar imagem</span><span class="fileupload-exists">Alterar</span>
          <%= c.input_field :capa_detalhe, :as => :file %>
        </span>
      </div>
    </div>
    <%= c.input :cor_primaria, :label => t('book_data.corprimaria'), :input_html => { :class => 'color', :value => @book.cover_info.primaria } %>
    <%= c.input :cor_secundaria, :label => t('book_data.corsecundaria'), :input_html => { :class => 'color', :value => @book.cover_info.secundaria  }  %>
  <% end %>
  <label for="book_datas_capainteira"><%= t('book_data.capainteira') %></label>
  <div class="fileupload <%= @book.book_data.capainteira.present? ? 'fileupload-exists' : 'fileupload-new' %>" data-provides="fileupload">
    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=sem+imagem" /></div>
      <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
       <%= image_tag(@book.book_data.capainteira.url(:thumb)) if @book.book_data.capainteira.present? %>
      </div>
      <div>
        <a id="#remove_capainteita_btn" href="#" class="btn btn-file fileupload-exists" data-dismiss="fileupload">Remover</a>
        <%= hidden_field_tag 'remove_capainteita', 'false' %>
      </div>
    <div>
      <span class="btn btn-file"><span class="fileupload-new">Selecionar imagem</span><span class="fileupload-exists">Alterar</span>
         <%= f.input_field :capainteira, :as => :file %>
      </span>
    </div>
  </div>
</div>
