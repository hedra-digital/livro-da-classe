
<%= render 'books/book_info' %>

<div class="container">
  <%= flash_message %>
  <div class="row">
    <div class="span3">
      <h1>Textos</h1>
    </div>

    <div class="span3 offset6">
      <%= link_to 'Novo Texto', new_book_text_path(@book.uuid), :class => 'btn btn-primary', :style => "margin-top: 30px;" %>
    </div>
  </div>

  <ul id="text-list" data-update-url="<%= sort_book_texts_path(@book) %>" style="margin-top: 20px;">
    <% @book.texts.each do |text| %>
      <%= content_tag_for :li, text do %>
      <span class="handle">[drag]</span>&nbsp;
      <strong><%= link_to(text.title, book_text_path(@book.uuid, text.uuid)) %></strong>&nbsp;&nbsp;
      <% end %>
    <% end %>
  </ul>
</div>
