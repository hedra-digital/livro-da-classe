<%= simple_form_for(@text) do |f| %>
  <%= f.error_notification %>
  <%= content_tag :p, 'Informe seu nome completo para criar um texto no livro.' %>
  <div class="form-inputs">
    <%= f.input :author_name %>    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Ver lista geral de textos do livro', texts_path %>