<%= simple_form_for([@book, @text], :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :placeholder => "Titulo do texto", :label => false%>
    <%= f.input :content, :label => false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar texto" %>
      <%= link_to  "Voltar ao livro", book_path(@book.uuid), :class => "btn btn-primary" %>
  </div>
<% end %>


<script type="text/javascript" >
   $(document).ready(function() {
      $("#text_content").markItUp(mySettings);
   });
</script>
