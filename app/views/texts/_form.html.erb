<%= simple_form_for([@book, @text]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :placeholder => "Titulo do texto"%>
    <%= f.input :content, :label => "" %>
    <% if session['admin_logged'] || session['professor_logged'] %>
      <%= f.association :books, :as => :check_boxes %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar texto" %>
    <%= link_to "Marcar texto como finalizado", finish_book_text_path(@book.uuid, @text.uuid), :class => "btn btn-danger" %>
  </div>
<% end %>

<script type="text/javascript" >
   $(document).ready(function() {
      $("#text_content").markItUp(mySettings);
   });
</script>

<style type="text/css">
  label {display: none;}
</style>