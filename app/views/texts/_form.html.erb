<%= simple_form_for([@book, @text], :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :placeholder => "Titulo do texto", :label => false%>
    <%= f.input :content, :label => false%>
  </div>

  <div class="form-actions">
      <%= f.button :submit, "Salvar texto" %>
      <%= f.button :submit, "Voltar ao livro", :class =>"btn-primary" %>
  </div>
<% end %>


<script type="text/javascript" >
   $(document).ready(function() {
      // use markupit
      $("#text_content").markItUp(mySettings);

      // save when required
      $('textarea').bindWithDelay("keyup", function(){
        var form = $("#edit_text_3");
        console.log("Saving");
        $.ajax( {
        type: "POST",
        url: form.attr( 'action' ),
        data: form.serialize()
      });
  
      }, 1000)
   });
</script>