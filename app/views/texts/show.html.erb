
<p><% if @text.finished_at.present? %>
	<em>Text finished at <%=	@text.finished_at %></em>
<% end %></p>
<p>&nbsp;</p>
<h1><%= link_to 'Edit this text', edit_text_path(@text.uuid) %></h1>

<p id="notice"><%= notice %></p>

<h2>Title</h2>
<p><%= @text.title %></p>

<h2>Content</h2>
<p><%= @text.content %></p>

<h2>In Books</h2>
<p><%= raw @text.books.map {|x| x.to_label}.join ', ' %></p>

<h2>LaTeX</h2>
<p><%= k_to_latex @text.content %></p>

<% if session['admin_logged'] %>
	<%= link_to 'Return to admin area', admin_path %> 
<% end %>